--- PHP ---
<?php

class TextInput
{    
    public $str = '';

    public function add($text) {
        $this->str .= $text;
    }
    public function getValue() {
        return $this->str;
    }
}

class NumericInput extends TextInput
{

    public function add($text) {
        if ( is_numeric($text)) {
            $this->str .= $text;
        }
    }
}



